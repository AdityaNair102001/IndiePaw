<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".default_page2">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleMarginStart="130dp"
            app:titleTextAppearance="@style/TextAppearance.MyApp.Headline1"
            app:titleTextColor="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/BAB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="30dp"
        android:backgroundTint="@color/white">
        <!--app:fabCradleMargin="20dp"
        app:fabCradleVerticalOffset="0dp"
        app:fabCradleRoundedCornerRadius="20dp"-->

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="0dp"
            android:background="@drawable/cornershape"
            app:elevation="2dp"
            app:itemIconSize="30dp"
            app:itemIconTint="@color/navcolor"
            app:itemRippleColor="@android:color/transparent"
            app:itemTextColor="@color/navcolor"
            app:menu="@menu/bottom_nav_menu_new" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/colorPrimaryVariant"
        app:layout_anchor="@id/bottomBar"
        android:layout_gravity="bottom|center"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>